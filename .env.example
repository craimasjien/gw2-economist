# GW2 Economist Environment Configuration
# Copy this file to .env and adjust values as needed

# PostgreSQL connection string
# Default matches docker-compose.yml settings
DATABASE_URL=postgres://gw2economist:gw2economist@localhost:5432/gw2economist

# File cache toggle (true/false)
# When true, API responses are cached to disk to reduce API calls
USE_FILE_CACHE=true

# Directory for cache files (relative to project root)
CACHE_DIR=./cache

# How often to sync prices (for reference - actual scheduling is external)
SYNC_INTERVAL_HOURS=1
