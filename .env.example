# Database connection
DATABASE_URL=postgres://gw2economist:gw2economist@localhost:5432/gw2economist

# Guild Wars 2 API Key (optional for public endpoints, required for account-specific data)
GW2_API_KEY=your_api_key_here

# Enable file-based caching to avoid API rate limits during development
USE_FILE_CACHE=true

# Directory for cached API responses
CACHE_DIR=./cache

# How often to sync price data (in hours)
SYNC_INTERVAL_HOURS=1
